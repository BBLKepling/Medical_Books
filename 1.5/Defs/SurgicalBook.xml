<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BookBase">
    <defName>BBLK_SurgicalBook</defName>
    <label>surgical book</label>
    <description>A surgical book, doctors will perform surgeries better when they study these.</description>
    <graphicData>
      <texPath>Things/Item/Book/Textbook/Textbook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.8</drawSize>
    </graphicData>
    <uiIconPath>Things/Item/Book/Textbook/Textbook</uiIconPath>
    <statBases>
      <MarketValue>160</MarketValue>
      <WorkToMake>180000</WorkToMake>
    </statBases>
    <comps>
      <li Class="CompProperties_Book">
        <nameMaker>BBLK_SurgicalBook_Namer</nameMaker>
        <descriptionMaker>BBLK_SurgicalBook_Description</descriptionMaker>
        <ageYearsRange>100~200</ageYearsRange>
        <openGraphic>
          <texPath>Things/Item/Book/Textbook/Textbook_Open</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>0.7</drawSize>
        </openGraphic>
        <verticalGraphic>
          <texPath>Things/Item/Book/Textbook/Textbook_Vertical</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <addTopAltitudeBias>true</addTopAltitudeBias>
        </verticalGraphic>
        <doers>
          <li Class="Medical_Books.BookOutcomeProperties_SurgicalBook" />
        </doers>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>BBLK_SurgicalBook_Knowledge</defName>
    <label>surgical knowledge</label>
    <description>.</description>
    <descriptionShort>.</descriptionShort>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.6, 0.6, 1.0)</defaultLabelColor>
    <isBad>false</isBad>
    <alwaysShowSeverity>true</alwaysShowSeverity>
    <initialSeverity>0.001</initialSeverity>
    <minSeverity>0</minSeverity>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.1</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <statOffsets>
          <MedicalOperationSpeed>0.05</MedicalOperationSpeed>
          <MedicalSurgerySuccessChance>0.05</MedicalSurgerySuccessChance>
        </statOffsets>
        <statFactors />
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <statOffsets>
          <MedicalOperationSpeed>0.1</MedicalOperationSpeed>
          <MedicalSurgerySuccessChance>0.1</MedicalSurgerySuccessChance>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <statOffsets>
          <MedicalOperationSpeed>0.15</MedicalOperationSpeed>
          <MedicalSurgerySuccessChance>0.15</MedicalSurgerySuccessChance>
        </statOffsets>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <statOffsets>
          <MedicalOperationSpeed>0.2</MedicalOperationSpeed>
          <MedicalSurgerySuccessChance>0.2</MedicalSurgerySuccessChance>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

  <RulePackDef>
    <defName>BBLK_SurgicalBook_Namer</defName>
    <rulePack>
      <rulesStrings>
        <li>title(quality[less_than]2)->[medField] for [dumb]</li>
        <li>title(quality[less_than]2)->[dumb] guide to [medField]</li>
        <li>title(quality[greater_than]1)->Secrets of [medField]</li>
		
        <li>medField->Amputation</li>
		
        <li>dumb->Dummies</li>
        <li>dumb->Idiots</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>BBLK_SurgicalBook_Description</defName>
    <rulePack>
      <rulesStrings>
        <li>desc->Some description</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>